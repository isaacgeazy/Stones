<html class="no-js" lang="">

<head>
  <!-- meta charset -->
  <meta charset="utf-8">
  <!-- site title -->
  <title>Stone Orçamentos</title>
  <!-- meta description -->
  <meta name="description" content="">
  <!-- mobile viwport meta -->
  <meta name="viewport" content="width=device-width, initial-scale=1">
  
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

  <!-- ================================
        CSS Files
        ================================= -->
  <link href="https://fonts.googleapis.com/css?family=Libre+Baskerville:400,400i|Open+Sans:400,600,700,800"
    rel="stylesheet">
  <link rel="stylesheet" href="/system/css/themefisher-fonts.min.css">
  <link rel="stylesheet" href="/system/css/owl.carousel.min.css">
  <link rel="stylesheet" href="/system/css/bootstrap.min.css">
  <link rel="stylesheet" href="/system/css/main.css">
  <link id="color-changer" rel="stylesheet" href="/system/css/colors/color-0.css">

</head>

<body>

  <div class="preloader">
    <div class="loading-mask"></div>
    <div class="loading-mask"></div>
    <div class="loading-mask"></div>
    <div class="loading-mask"></div>
    <div class="loading-mask"></div>
  </div>

  <main class="site-wrapper">
    <div class="pt-table">
      <div class="pt-tablecell page-works relative">
        <!-- .close -->
        <div class="page-close">
          <div class="btn-group btn-group-lg" role="group" aria-label="Basic outlined example">
              <a href="/orcamento/listaOrcamento" class="btn btn-primary"><svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-card-list" viewBox="0 0 16 16">
                <path d="M14.5 3a.5.5 0 0 1 .5.5v9a.5.5 0 0 1-.5.5h-13a.5.5 0 0 1-.5-.5v-9a.5.5 0 0 1 .5-.5h13zm-13-1A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h13a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2h-13z"/>
                <path d="M5 8a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7A.5.5 0 0 1 5 8zm0-2.5a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7a.5.5 0 0 1-.5-.5zm0 5a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7a.5.5 0 0 1-.5-.5zm-1-5a.5.5 0 1 1-1 0 .5.5 0 0 1 1 0zM4 8a.5.5 0 1 1-1 0 .5.5 0 0 1 1 0zm0 2.5a.5.5 0 1 1-1 0 .5.5 0 0 1 1 0z"/>
              </svg></a>
              <a href="/menu" class="btn btn-primary"><svg xmlns="http://www.w3.org/2000/svg" width="24"
                      height="24" fill="currentColor" class="bi bi-arrow-return-left" viewBox="0 0 16 16">
                      <path fill-rule="evenodd"
                          d="M14.5 1.5a.5.5 0 0 1 .5.5v4.8a2.5 2.5 0 0 1-2.5 2.5H2.707l3.347 3.346a.5.5 0 0 1-.708.708l-4.2-4.2a.5.5 0 0 1 0-.708l4-4a.5.5 0 1 1 .708.708L2.707 8.3H12.5A1.5 1.5 0 0 0 14 6.8V2a.5.5 0 0 1 .5-.5z" />
                  </svg></a>
          </div>
      </div>
        <!-- /.close -->

        <div class="container">
          <div class="row">
            <div class="col-xs-12 col-md-offset-1 col-md-10 col-lg-offset-2 col-lg-8">
              <div class="page-title text-center">
                <h2>Meus<span class="primary">Orçamentos</span> <span class="title-bg">Stone</span></h2>
                <p>Orçamentos</p>
              </div>
            </div>
          </div> <!-- /.row -->

          <div class="row">
            <div class="col-xs-12">
              <div class="container">
                <h2>Buscar cliente</h2>
                <p>Procurar cliente cadastrado pelo nome, CPF ou Telefone</p>
                <input class="form-control" id="myInput" type="text" placeholder="Procurar">
                <br>
                <table class="table table-hover">
                  <thead>
                    <tr>
                      <th>Nome</th>
                      <th>CPF</th>
                      <th>Telefone</th>
                      <th>Selecionar</th>
                    </tr>
                  </thead>
                  <tbody id="myTable">
                    <% lista.forEach((cliente)=>{%>
                    <tr>
                      <td>
                        <%=cliente.nome%>
                      </td>
                      <td>
                        <%=cliente.cpf%>
                      </td>
                      <td>
                        <%=cliente.telefone%>
                      </td>
                      <td><a href="/orcamento/<%=cliente._id%>/addservicos" class="btn btn-success">
                          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                            class="bi bi-check2-circle" viewBox="0 0 16 16">
                            <path
                              d="M2.5 8a5.5 5.5 0 0 1 8.25-4.764.5.5 0 0 0 .5-.866A6.5 6.5 0 1 0 14.5 8a.5.5 0 0 0-1 0 5.5 5.5 0 1 1-11 0z" />
                            <path
                              d="M15.354 3.354a.5.5 0 0 0-.708-.708L8 9.293 5.354 6.646a.5.5 0 1 0-.708.708l3 3a.5.5 0 0 0 .708 0l7-7z" />
                          </svg>
                        </a></td>
                    </tr>
                    <% });%>

                  </tbody>
                </table>


              </div>

              <script>
                $(document).ready(function () {
                  $("#myInput").on("keyup", function () {
                    var value = $(this).val().toLowerCase();
                    $("#myTable tr").filter(function () {
                      $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                    });
                  });
                });
              </script>

              <!-- /.container -->
            </div>

          </div> <!-- /.pt-tablecell -->
        </div> <!-- /.pt-table -->
  </main> <!-- /.site-wrapper -->

  <!-- ================================
        JavaScript Libraries
        ================================= -->
  <script src="/system/js/vendor/jquery-2.2.4.min.js"></script>
  <script src="/system/js/vendor/bootstrap.min.js"></script>
  <script src="/system/js/jquery.easing.min.js"></script>
  <script src="/system/js/isotope.pkgd.min.js"></script>
  <script src="/system/js/jquery.nicescroll.min.js"></script>
  <script src="/system/js/owl.carousel.min.js"></script>
  <script src="/system/js/jquery-validation.min.js"></script>
  <script src="/system/js/form.min.js"></script>
  <script src="/system/js/main.js"></script>
</body>

</html>